<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Rlayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:weightSum="1">
    <!-- リストビュー -->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/hachimitsu2"
        android:layout_marginBottom="87dp"
        android:layout_above="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:id="@android:id/list"
        android:background="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:minHeight="100dp"
        android:layout_weight="0.42"
        android:layout_marginTop="243dp"
        android:layout_below="@+id/header"
        android:layout_above="@+id/footer" />
    <!-- リストが空のときに表示 -->

    <TextView
        android:id="@android:id/empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

   <!-- <ScrollView
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
-->
    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:src="@drawable/hacchin"
        android:layout_marginBottom="71dp"
        android:layout_alignBottom="@android:id/list"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
   <!-- </ScrollView>  -->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/footer"
        android:src="@drawable/footer4"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/header"
        android:src="@drawable/footer4"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="↓本日のlivedoorトップニュース"
        android:id="@+id/textView"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_toRightOf="@android:id/empty"
        android:layout_toEndOf="@android:id/empty" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="livedoorニュースまとめのまとめ"
        android:id="@+id/textView2"
        android:textColor="#ffffff"
        android:layout_below="@+id/header"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />

 <!--   <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner2"

        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:spinnerMode="dialog" />
-->
    <Button
        android:layout_width="300px"
        android:layout_height="100px"
        android:text="text"
        android:id="@+id/button"
        style="@android:style/Widget.Holo.Light.Spinner"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />

</RelativeLayout>